<body>

<select id="resolutionSelect" onchange="changeResolution(this.value)">
  <option value="144p">144p</option>
  <option value="360p">360p</option>
  <option value="720p">720p</option>
  <option value="1080p">1080p</option>
</select>

<script>
  function changeResolution(resolution) {
    const backgrounds = {
      '144p': 'https://img.freepik.com/vetores-premium/lua-de-pixel-art-e-estrelas-ilustracao-vetorial_38133-23.jpg',
      '360p': 'https://preview.redd.it/d09a9odnvb021.png?width=1080&crop=smart&auto=webp&s=74c886a5253459454fdf0e9b1cee1d58246af612',
      '720p': 'https://img.freepik.com/fotos-premium/uma-paisagem-urbana-com-lua-cheia-e-uma-paisagem-urbana-ao-fundo_662214-24483.jpg',
      '1080p': 'https://i.ibb.co/YZ8k5VC/asdasdasd.jpg'
    };
    
    document.body.style.backgroundImage = `url('${backgrounds[resolution]}')`;
  }
</script>

</body>
</html>
